{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Insumo list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Insumo</th>
                <th>Embalagem</th>
                <th>Un</th>
                <th>Descricao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('insumo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.insumo }}</td>
                <td>{{ entity.embalagem }}</td>
                <td>{{ entity.un }}</td>
                <td>{{ entity.descricao }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('insumo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('insumo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('insumo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
