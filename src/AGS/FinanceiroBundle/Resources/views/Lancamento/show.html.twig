{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lancamento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Datavencimento</th>
                <td>{{ entity.dataVencimento|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Situacao</th>
                <td>{{ entity.situacao }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipo }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
            <tr>
                <th>Obs</th>
                <td>{{ entity.obs }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('lancamento') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('lancamento_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
