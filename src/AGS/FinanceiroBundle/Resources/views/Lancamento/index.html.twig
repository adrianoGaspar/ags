{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lancamento list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datavencimento</th>
                <th>Situacao</th>
                <th>Tipo</th>
                <th>Valor</th>
                <th>Obs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lancamento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dataVencimento %}{{ entity.dataVencimento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.situacao }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.valor }}</td>
                <td>{{ entity.obs }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('lancamento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lancamento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('lancamento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
