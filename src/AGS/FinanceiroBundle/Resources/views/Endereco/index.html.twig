{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Endereco list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>Numero</th>
                <th>Complemento</th>
                <th>Cep</th>
                <th>Tipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('endereco_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rua }}</td>
                <td>{{ entity.bairro }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.complemento }}</td>
                <td>{{ entity.cep }}</td>
                <td>{{ entity.tipo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('endereco_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('endereco_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('endereco_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
